                 <model>mobile/notification_api</model>
                <acl>appypie/mobile</acl>
                <methods>
					<info translate="title" module="mobile">
						<title>Returns version of this API</title>
						<acl>appypie/mobile/allaccess</acl>
					</info>
                </methods>
            </mobile_notifictaion>

            <mobile_category translate="title" module="mobile">
                <title>Appypie mobile Category API calls</title>
                <model>mobile/category_api</model>
                <acl>appypie/mobile</acl>

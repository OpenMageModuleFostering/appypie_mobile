        </resources>
        <resources_alias><!-- here we can put aliases, shortened calls for our api resource, I haven't checked how alias behaves when it collides with different resource... -->
			<mobile_notification>mobile_notification</mobile_notification>
            <mobile_category>mobile_category</mobile_category>
            <mobile_product>mobile_product</mobile_product>
            <mobile_cart>mobile_cart</mobile_cart>
            <mobile_customer>mobile_customer</mobile_customer>
            <mobile_customer_address>mobile_customer_address</mobile_customer_address>
            <mobile_cart_shipping>mobile_cart_shipping</mobile_cart_shipping>
            <mobile_cart_payment>mobile_cart_payment</mobile_cart_payment>
            <mobile_sales_order>mobile_sales_order</mobile_sales_order>
            <mobile_cart_product>mobile_cart_product</mobile_cart_product>
            <mobile_wishlist>mobile_wishlist</mobile_wishlist>
            <mobile_directory>mobile_directory</mobile_directory>
        </resources_alias>

        <acl><!-- Access Control List  to our resources, this tree structure is displayed in "Resource Roles" panel when you open role to edit -->
            <resources>
                <appypie translate="title" module="mobile">
                    <title>Appypie</title>
                    <sort_order>100</sort_order>
                    <mobile translate="title" module="mobile">
                        <title>mobile</title>
                        <sort_order>100</sort_order>
                        <allaccess translate="title" module="mobile">
                            <title>Core functionality required by all users.</title>
                            <sort_order>10</sort_order>
                        </allaccess>
                        <owneraccess translate="title" module="mobile">
                            <title>Functions accessible only for owner.</title>
                            <sort_order>50</sort_order>
                        </owneraccess>
                    </mobile>
                </appypie>
            </resources>
        </acl>
    </api>
</config>

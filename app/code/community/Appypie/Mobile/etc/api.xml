						<acl>appypie/mobile/allaccess</acl>
					</brandscategory>
					<productdetail translate="title" module="mobile">
						<title>Returns version of this API</title>
						<acl>appypie/mobile/allaccess</acl>
					</productdetail>
					<items translate="title" module="mobile">
						<title>Returns version of this API</title>
						<acl>appypie/mobile/allaccess</acl>
					</items>
					<productlist translate="title" module="mobile">
						<title>Returns1 version of this API</title>
						<acl>appypie/mobile/allaccess</acl>
					</productlist>
					<addwishlist translate="title" module="mobile">
						<title>Returns1 version of this API</title>
						<acl>appypie/mobile/allaccess</acl>
					</addwishlist>
					<newproductlist translate="title" module="mobile">
						<title>Returns version of this API</title>
						<acl>appypie/mobile/allaccess</acl>
					</newproductlist>
					<manufactureprodlist translate="title" module="mobile">
						<title>Returns version of this API</title>
						<acl>appypie/mobile/allaccess</acl>
					</manufactureprodlist>
					<getcurrency translate="title" module="mobile">
						<title>Returns version of this API</title>
						<acl>appypie/mobile/allaccess</acl>
					</getcurrency>
                </methods>
            </mobile_product>

            <!-- Cart -->
            <mobile_cart translate="title" module="mobile">
                <title>Appypie mobile Cart API calls</title>
                <model>mobile/cart_api</model>
                <acl>appypie/mobile</acl>
                <methods>
					<create translate="title" module="mobile">
						<title>Returns version of this API</title>
						<acl>appypie/mobile/allaccess</acl>
					</create>
                   	<addcart translate="title" module="mobile">
						<title>Returns version of this API</title>
						<acl>appypie/mobile/allaccess</acl>
					</addcart>
                   	<cartlist translate="title" module="mobile">
						<title>Returns version of this API</title>
						<acl>appypie/mobile/allaccess</acl>
					</cartlist>
					<update translate="title" module="mobile">
						<title>Returns version of this API</title>
						<acl>appypie/mobile/allaccess</acl>
					</update>
					<emptycart translate="title" module="mobile">
						<title>Returns1 version of this API</title>
						<acl>appypie/mobile/allaccess</acl>
					</emptycart>
					<remove translate="title" module="mobile">
						<title>Returns version of this API</title>
						<acl>appypie/mobile/allaccess</acl>
					</remove>
					<addcoupon translate="title" module="mobile">
						<title>Returns version of this API</title>
						<acl>appypie/mobile/allaccess</acl>
					</addcoupon>
					<wishlisttocart translate="title" module="mobile">
						<title>Returns version of this API</title>
						<acl>appypie/mobile/allaccess</acl>
					</wishlisttocart>
                </methods>
                 <faults module="mobile">
                    <coupon_code_is_not_valid>
                        <code>1083</code>
                        <message>Coupon code is not valid</message>
                    </coupon_code_is_not_valid>
                    <quote_is_empty>
                        <code>1081</code>
                        <message>Coupon could not be applied because quote is empty</message>
                    </quote_is_empty>
                    <cannot_apply_coupon_code>
                        <code>1082</code>
                        <message>Coupon could not be applied.</message>
                    </cannot_apply_coupon_code>
                    <product_qty_not_available_fault>
                        <code>1084</code>
                        <message>Product Qty is not available.</message>
                    </product_qty_not_available_fault>
                </faults>
            </mobile_cart>
            <!-- Shipping -->
            <mobile_cart_shipping translate="title" module="mobile">
                <title>Appypie mobile Cart Shipping API calls</title>
                <model>mobile/cart_shipping_api</model>
                <acl>appypie/mobile</acl>
                <methods>
                   	<setshippingmethod translate="title" module="mobile">
						<title>Returns1 version of this API</title>
						<acl>appypie/mobile/allaccess</acl>
					</setshippingmethod>
					<calculatetax translate="title" module="mobile">
						<title>Returns version of this API</title>
						<acl>appypie/mobile/allaccess</acl>
					</calculatetax>
					<calculation translate="title" module="mobile">
						<title>Returns version of this API</title>
						<acl>appypie/mobile/allaccess</acl>
					</calculation>
                </methods>
            </mobile_cart_shipping>
            <!-- Payment -->
            <mobile_cart_payment translate="title" module="mobile">
                <title>Appypie mobile Cart Payment API calls</title>
                <model>mobile/cart_payment_api</model>
                <acl>appypie/mobile</acl>
                <methods>
                   <placeorder translate="title" module="mobile">
						<title>Returns version of this API</title>
						<acl>appypie/mobile/allaccess</acl>
					</placeorder>
					<method translate="title" module="mobile">
                        <title>Set payment method</title>
                        <method>setPaymentMethod</method>
                        <acl>cart/payment/method</acl>
                    </method>
                    <list translate="title" module="mobile">
                        <title>Get list of available payment methods</title>
                        <method>getPaymentMethodsList</method>
                        <acl>cart/payment/list</acl>
                    </list>
                    <savepayment translate="title" module="mobile">
                        <title>Save payment details</title>
                        <acl>cart/payment/list</acl>
                    </savepayment>
                </methods>
                <faults module="mobile">
                    <payment_method_is_not_valid>
                        <code>1001</code>
                        <message>Payment Method is not valid</message>
                    </payment_method_is_not_valid>
                </faults>
            </mobile_cart_payment>
            <!-- Cart Customer -->
            <mobile_cart_customer translate="title" module="mobile">
                <title>Appypie mobile Cart Customer API calls</title>
                <model>mobile/cart_customer_api</model>
                <acl>appypie/mobile</acl>
                <methods>
					<addresses translate="title" module="mobile">
						<title>Returns version of this API</title>
						<acl>appypie/mobile/allaccess</acl>
					</addresses>
                   	<setcustomer translate="title" module="mobile">
						<title>Returns1 version of this API</title>
						<acl>appypie/mobile/allaccess</acl>
					</setcustomer>
                </methods>
                <faults module="mobile">
                    <customer_is_not_valid>
                        <code>1001</code>
                        <message>Customer is not valid</message>
                    </customer_is_not_valid>
                </faults>
            </mobile_cart_customer>
            <!-- Cart Product -->
            <mobile_cart_product translate="title" module="mobile">
                <title>Appypie mobile Cart Product API calls</title>
                <model>mobile/cart_product_api</model>
                <acl>appypie/mobile</acl>
                <methods>
					<moveToCustomerQuote translate="title" module="mobile">
						<title>Returns version of this API</title>
						<acl>appypie/mobile/allaccess</acl>
					</moveToCustomerQuote>
					<getCustomerQuote translate="title" module="mobile">
						<title>Returns version of this API</title>
						<acl>appypie/mobile/allaccess</acl>
					</getCustomerQuote>

                </methods>
                <faults module="mobile">
                    <customer_not_set_for_quote>
                        <code>1001</code>
                        <message>Customer not set for quote id</message>
                    </customer_not_set_for_quote>
                    <customer_quote_not_exist>
                        <code>1001</code>
                        <message>Customer quote id not exist</message>
                    </customer_quote_not_exist>
                </faults>
            </mobile_cart_product>
            <!-- Customer -->
            <mobile_customer translate="title" module="mobile">
                <title>Appypie mobile Cart API calls</title>
                <model>mobile/customer_api</model>
                <acl>appypie/mobile</acl>
                <methods>
					<logout translate="title" module="mobile">
						<title>Returns version of this API</title>
						<acl>appypie/mobile/allaccess</acl>
					</logout>
					<notification translate="title" module="mobile">
						<title>Returns version of this API</title>
						<acl>appypie/mobile/allaccess</acl>
					</notification>
					<deviceapp translate="title" module="mobile">
						<title>Returns version of this API</title>
						<acl>appypie/mobile/allaccess</acl>
					</deviceapp>
					<create translate="title" module="mobile">
						<title>Returns version of this API</title>
						<acl>appypie/mobile/allaccess</acl>
					</create>
					<login translate="title" module="mobile">
						<title>Returns version of this API</title>

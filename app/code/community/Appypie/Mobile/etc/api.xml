					<!--brandslist translate="title" module="mobile">
						<title>Returns version of this API</title>
						<acl>appypie/mobile/allaccess</acl>
					</brandslist-->
					<manufacturerlist translate="title" module="mobile">
						<title>Returns version of this API</title>
						<acl>appypie/mobile/allaccess</acl>
					</manufacturerlist>
                </methods>
            </mobile_category>
            <!-- Product -->
            <mobile_product translate="title" module="mobile">
                <title>Appypie mobile Product API calls</title>
                <model>mobile/product_api</model>
                <acl>appypie/mobile</acl>
                <methods>
					<tracking translate="title" module="mobile">

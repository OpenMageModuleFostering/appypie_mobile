					<forgotpassword translate="title" module="mobile">
						<title>Returns version of this API</title>
						<acl>appypie/mobile/allaccess</acl>
					</forgotpassword>
					<feedback translate="title" module="mobile">
						<title>Returns version of this API</title>
						<acl>appypie/mobile/allaccess</acl>
					</feedback>

					<info translate="title" module="mobile">
						<title>Returns version of this API</title>
						<acl>appypie/mobile/allaccess</acl>
					</info>
                </methods>
                <faults module="mobile">
                    <data_invalid>
                        <code>1001</code>
                        <message>Email Id already exits.</message>
                    </data_invalid>
                </faults>
            </mobile_customer>
            <!-- Address -->
            <mobile_customer_address translate="title" module="mobile">
                <title>Appypie mobile customer address API calls</title>
                <model>mobile/customer_address_api</model>
                <acl>appypie/mobile</acl>
                <methods>

					<create translate="title" module="mobile">
						<title>Returns1 version of this API</title>
						<acl>appypie/mobile/allaccess</acl>
					</create>
					<update translate="title" module="mobile">
						<title>Returns1 version of this API</title>
						<acl>appypie/mobile/allaccess</acl>
					</update>
					<list translate="title" module="mobile">
						<title>Returns1 version of this API</title>
						<method>items</method>
						<acl>appypie/mobile/allaccess</acl>
					</list>

                </methods>
            </mobile_customer_address>
            <!-- Sales -->
            <mobile_sales_order translate="title" module="mobile">
                <title>Appypie mobile sales order API calls</title>
                <model>mobile/sales_order_api</model>
                <acl>appypie/mobile</acl>
                <methods>
					<list translate="title" module="mobile">
						<title>Returns1 version of this API</title>
						<method>items</method>
						<acl>appypie/mobile/allaccess</acl>
					</list>
					<info translate="title" module="mobile">
						<title>Returns1 version of this API</title>
						<acl>appypie/mobile/allaccess</acl>
					</info>
                </methods>
            </mobile_sales_order>
             <!-- Wishlist -->
            <mobile_wishlist translate="title" module="mobile">
                <title>Appypie mobile wishlist API calls</title>
                <model>mobile/wishlist_api</model>
                <acl>appypie/mobile</acl>
                <methods>
					<addwishlist translate="title" module="mobile">
						<title>Returns version of this API</title>
						<acl>appypie/mobile/allaccess</acl>
					</addwishlist>
					<listwishlist translate="title" module="mobile">
						<title>Returns wishlist data by customer Email</title>
						<acl>appypie/mobile/allaccess</acl>
					</listwishlist>
					<removewishlist translate="title" module="mobile">
						<title>Remove item from wishlist data by customer Email and product id</title>
						<acl>appypie/mobile/allaccess</acl>
					</removewishlist>
					<updatewishlist translate="title" module="mobile">
						<title>Remove item from wishlist data by customer Email and product id</title>
						<acl>appypie/mobile/allaccess</acl>
					</updatewishlist>
					<countrylist translate="title" module="mobile">
						<title>Remove item from wishlist data by customer Email and product id</title>
						<acl>appypie/mobile/allaccess</acl>
					</countrylist>
                </methods>
            </mobile_wishlist>
             <!-- Directory -->
            <mobile_directory translate="title" module="mobile">
                <title>Appypie mobile directory API calls</title>
                <model>mobile/directory_api</model>
                <acl>appypie/mobile</acl>
                <methods>
					<countrylist translate="title" module="mobile">
						<title>Returns version of this API</title>
						<acl>appypie/mobile/allaccess</acl>
					</countrylist>
                </methods>
            </mobile_directory>

